<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lumememm_valjataga.MainPage"
             Title="Lumememm"
	         BackgroundColor="Aqua">

	<StackLayout x:Name="lummi" BackgroundColor="Aqua">
        <Frame x:Name="head" BackgroundColor="White" 
                   Padding="60" 
                   CornerRadius="60" 
                   Margin="90,0">
        </Frame>
        <Frame x:Name="keha" BackgroundColor="White" 
                   Padding="60" 
                   CornerRadius="60" 
                   Margin="90,0">
        </Frame>
        <Frame x:Name="jalad" BackgroundColor="White" 
                   Padding="60" 
                   CornerRadius="60" 
                   Margin="90,0">
        </Frame>
        <StackLayout  Margin="20,35,20,20">
            <Slider x:Name="Opacity" Minimum="0" Maximum="100" Value="0"
                   ValueChanged="Opacity_ValueChanged"></Slider>
            <Label x:Name="SliderLabel" 
                       VerticalOptions="Center"/>
            <Button x:Name="Btn"
                    Text="random"
                    HorizontalOptions="FillAndExpand"
					Cliked="random_Cliked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
